datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  savedNews SavedNews[]
}

model SavedNews {
  id        String   @id @default(cuid())
  userId    String
  title     String
  url       String
  source    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Article {
  id        String   @id @default(cuid())
  title     String
  link      String
  summary   String?
  image     String?
  source    String
  date      DateTime
  category  String
  locale    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([link, locale], name: "link_locale")
}
